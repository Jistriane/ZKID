# Environment Configuration
# Copy this file to .env and fill in your values

# Stellar Network Configuration
STELLAR_NETWORK=testnet
# Options: development, testnet, production

# Stellar RPC URLs
STELLAR_RPC_URL_TESTNET=https://soroban-testnet.stellar.org
STELLAR_RPC_URL_MAINNET=https://soroban-mainnet.stellar.org

# Horizon URLs
HORIZON_URL_TESTNET=https://horizon-testnet.stellar.org
HORIZON_URL_MAINNET=https://horizon.stellar.org

# Network Passphrases
STELLAR_NETWORK_PASSPHRASE_TESTNET="Test SDF Network ; September 2015"
STELLAR_NETWORK_PASSPHRASE_MAINNET="Public Global Stellar Network ; September 2015"

# Contract Addresses (fill after deployment)
VITE_VERIFIER_CONTRACT_ID=
VITE_CREDENTIAL_REGISTRY_CONTRACT_ID=
VITE_COMPLIANCE_ORACLE_CONTRACT_ID=

# Frontend Configuration
VITE_APP_NAME="ZKID Stellar"
VITE_APP_DESCRIPTION="Zero-Knowledge Identity and Compliance System"

# API Keys (if needed for compliance oracle)
# COMPLIANCE_API_KEY=your_api_key_here

# Development Settings
VITE_ENABLE_DEBUG=false
VITE_MOCK_PROOFS=false

# ElizaOS Agent Configuration (optional - only needed if running eliza_bot/)
# Copy eliza_bot/.env.example to eliza_bot/.env for full configuration
# OPENAI_API_KEY=sk-...                    # For OpenAI models
# OLLAMA_API_ENDPOINT=http://localhost:11434  # For local Ollama
# OLLAMA_MODEL=llama3.1                    # Local model name
